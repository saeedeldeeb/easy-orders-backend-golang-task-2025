# Easy Orders Backend - Docker Compose Environment Variables
# This file is automatically read by docker-compose.yml and docker-compose.dev.yml

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
SERVER_PORT=8080
LOG_LEVEL=info
ENVIRONMENT=docker

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=easy_orders
DB_SSLMODE=disable
DB_MAX_CONNS=25
DB_MAX_IDLE=5
# External port for Docker (maps to internal 5432)
DB_EXTERNAL_PORT=5433

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=docker-super-secret-jwt-key-change-this-in-production-12345
JWT_EXPIRE_TIME=24h

# ===========================================
# DEVELOPMENT OVERRIDES (for docker-compose.dev.yml)
# ===========================================
JWT_SECRET_DEV=dev-super-secret-jwt-key-change-this-in-production-12345
LOG_LEVEL_DEV=debug
ENVIRONMENT_DEV=development

# ===========================================
# DOCKER COMPOSE SPECIFIC
# ===========================================
ADMINER_PORT=8081
